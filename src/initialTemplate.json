{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Notification Hub For Aws - Initial Stack",
    "Resources": {
        "DeploymentBucket": {
            "Type": "AWS::S3::Bucket"
        },
        "MessagesTopic" : {
            "Type" : "AWS::SNS::Topic"
        }
    },
    "Outputs":{
        "deploymentBucket":{
            "Description": "Bucket for storing the SAM application code",
            "Value":{
                "Fn::GetAtt":[
                    "DeploymentBucket",
                    "DomainName"
                ]
            }
        },
        "messageTopic": {
            "Description": "SNS topic arm for Messages",
            "Value": {
                "Ref": "MessagesTopic"
            }
        }
    }
}