{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Notification Hub For Aws - Initial Stack",
    "Resources": {
        "DeploymentBucket": {
            "Type": "AWS::S3::Bucket"
        },
        "MessageTopic": {
            "Type": "AWS::SNS::Topic"
        },
        "CloudWatchAlarmTopic": {
            "Type": "AWS::SNS::Topic"
        },
        "CodeBuildTopic": {
            "Type": "AWS::SNS::Topic"
        }
    },
    "Outputs": {
        "deploymentBucket": {
            "Description": "Bucket for storing the SAM application code",
            "Value": {
                "Fn::GetAtt": [
                    "DeploymentBucket",
                    "DomainName"
                ]
            }
        },
        "messageTopic": {
            "Description": "SNS topic arm for Messages",
            "Value": {
                "Ref": "MessageTopic"
            }
        },
        "cloudWatchAlarmTopic": {
            "Description": "SNS topic arm for CloudWatch Alarms",
            "Value": {
                "Ref": "CloudWatchAlarmTopic"
            }
        },
        "codeBuildTopic": {
            "Description": "SNS topic arm for CodeBuild events",
            "Value": {
                "Ref": "CodeBuildTopic"
            }
        }
    }
}